<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tutTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="5dp"
        android:text="@string/tut_rules"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/bright2_theme_color"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tutInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7fff"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/tut_rules_info"
        android:textColor="@color/dark2_theme_color"
        android:textStyle="bold"
        android:layout_below="@+id/space"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:id="@+id/space"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:scaleType="center"
        android:src="@drawable/tut3"
        android:layout_below="@+id/tutTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>